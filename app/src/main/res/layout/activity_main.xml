<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yodpanom.yaowaluk.mymuzservice.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <!--Toolbar-->
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbarMain"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/colorPrimary"
          android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

      <!--Content of fragment-->

      <FrameLayout
          android:id="@+id/contentFragmentMain"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

    </LinearLayout>


    <!--Drawer menu-->
    <LinearLayout
        android:layout_gravity="start"
        android:padding="30dp"
        android:background="#949292"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent">

        <!--Title-->
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Muz See Service"
            android:textStyle="bold"
            android:textSize="@dimen/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Main-->
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--icon-->
            <ImageView

                android:src="@drawable/ic_action_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--text-->
            <TextView
                android:id="@+id/txtMain"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="Main"
                android:textSize="@dimen/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--Second-->
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--icon-->
            <ImageView

                android:src="@drawable/ic_action_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--text-->
            <TextView
                android:id="@+id/txtSecond"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="Second"
                android:textSize="@dimen/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--Exit-->
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--icon-->
            <ImageView

                android:src="@drawable/ic_action_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--text-->
            <TextView
                android:id="@+id/txtExit"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="Exit"
                android:textSize="@dimen/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
